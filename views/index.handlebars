<div class="container">
    <div class="jumbotron">
        <!-- img -->
        <h1> Eat-Da-Burger! </h1>
    </div>

    {{!-- burger list before being eaten --}}
    <div class="row">
        <div class="col-md-4 col-md-offset-1">

            <ul class="list-group">
                {{#each burger_data}} {{#unless this.devoured}}
                <li class="list-group-item">
                    <div class="input-group">
                        <p class="lead"> {{this.burger_name}} </p>
                        <span class="input-group-btn">
                            <form action="/burgers/update/?_method=PUT" method="POST">
                                <input type="hidden" name="burger_id" value={{this.id}}>
                                <button class="btn btn-default btn-lg" type="submit"> EAT IT! </button>
                            </form>
                        </span>
                    </div>
                </li>
                {{/unless}} {{/each}}
            </ul>

        </div>


        {{!-- burger list after being eaten --}}
        <div class="row">
            <div class="col-md-4 col-md-offset-2">

                <ul class="list-group">
                    {{#each burger_data}} {{#if this.devoured}}
                    <input class = "form-control" type="text" placeholder="{{this.id}}, {{this.burger_name}}">
                    {{/if}} {{/each}}
                </ul>

            </div>
        </div>

        <div class="col-md-10 col-md-offset-1">
            <p class="lead"> Enter the name of the burger you want to eat & click the submit button. </p>

            {{!-- section to add burgers --}}
            <form class="create-update-form" action="burgers/create" method="POST">

                <div class="form-group">
                    <textarea class="form-control input-lg" type="text" name="burger_name" rows="3"> </textarea>
                </div>

                <button class="btn btn-default btn-lg" type="submit">Add Burger!</button>
            </form>
        </div>
    </div>