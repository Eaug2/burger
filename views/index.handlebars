<div class="container">
    <div class="jumbotron">
        <!-- img -->
        <h1> Eat-Da-Burger! </h1>
    </div>

    {{!-- burger list before being eaten --}}
    <div class="row">
        <div class="col-md-4">

            <ul class="list-group">
                {{#each burger_data}} {{#unless this.devoured}}
                <li class="list-group-item">
                    <div class="input-group">
                        <p class="lead"> {{this.burger_name}} </p>
                        <form action="/burgers/update?_method=PUT" method="POST">
                            <input type="hidden" name="id" value={{this.id}}>
                            <button class="btn btn-default btn-lg" type="submit"> EAT IT! </button>
                        </form>
                    </div>
                </li>
                {{/unless}} {{/each}}
            </ul>

        </div>


        {{!-- burger list after being eaten --}}
        
            <div class="col-md-4 ">

                <ul class="list-group">
                    {{#each burger_data}} {{#if this.devoured}}
                    <li class="list-group-item">
                        <div class="input-group">
                            <p class="lead"> {{this.burger_name}} </p>
                        </div>
                    </li>
                    {{/if}} {{/each}}
                </ul>

            </div>
        

        <div class="col-md-10">
            <p class="lead"> Enter the name of the burger you want to eat & click the submit button. </p>

            {{!-- section to add burgers --}}
            <form class="create-update-form" action="/burgers/create" method="POST">

                <div class="form-group">
                    <textarea class="form-control input-lg" type="text" name="burger_name" rows="3"> </textarea>
                </div>

                <button class="btn btn-default btn-lg" type="submit">Add Burger!</button>
            </form>
        </div>
    </div>